<div>
  <nav class="bg-indigo-600">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="flex items-center justify-between h-16">
        <div class="flex items-center">
          <div class="hidden md:block">
            <div class="flex items-baseline space-x-4">
              <LinkTo @route="index" class={{navstyles 'index'}}>Home</LinkTo>
              {{#if this.session.isAuthenticated}}
                {{#if this.showUsersNav}}
                  <LinkTo @route="authenticated.users" class={{navstyles 'users'}}>Users</LinkTo>
                {{/if}}
                {{#if this.showPermsNav}}
                  <LinkTo @route="authenticated.permissions" class={{navstyles 'permissions'}}>Permissions</LinkTo>
                {{/if}}
              {{/if}}
            </div>
          </div>
        </div>
        <div class="-mr-2 flex hidden md:block">
          {{#if this.session.isAuthenticated}}
            <button type="button" class="whitespace-nowrap text-base text-sm font-medium text-white hover:text-gray-500" {{on "click" this.logout}}>
              Log Out
            </button>
          {{else}}
            <a href="/login" class="whitespace-nowrap text-base text-sm font-medium text-white hover:text-gray-500">
              Log in
            </a>
          {{/if}}
        </div>
        <div class="-mr-2 flex md:hidden">
          <button type="button" class="bg-gray-800 inline-flex items-center justify-center p-2 rounded-md text-gray-400 hover:text-white hover:bg-gray-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-offset-gray-800 focus:ring-white" {{on "click" this.open}}>
            <span class="sr-only">Open main menu</span>
            <svg class="block h-6 w-6" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" aria-hidden="true">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
            </svg>
            <svg class="hidden h-6 w-6" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" aria-hidden="true">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
            </svg>
          </button>
        </div>
      </div>
    </div>

    <div class={{if this.showNav "md:hidden" "hidden md:hidden"}}>
      <div class="px-2 pt-2 pb-3 space-y-1 sm:px-3">
        <LinkTo @route="index" class={{navstyles 'index' 'mobile'}}>Home</LinkTo>
        {{#if this.session.isAuthenticated}}
          <LinkTo @route="authenticated.users" class={{navstyles 'users' 'mobile'}}>Users</LinkTo>
          <LinkTo @route="authenticated.permissions" class={{navstyles 'permissions' 'mobile'}}>Permission</LinkTo>
        {{/if}}
        <div class="-mr-2 flex pl-3">
          {{#if this.session.isAuthenticated}}
            <button type="button" class="whitespace-nowrap text-base text-sm font-medium text-white hover:text-gray-500" {{on "click" this.logout}}>
              Log Out
            </button>
          {{else}}
            <a href="/login" class="whitespace-nowrap text-base text-sm font-medium text-white hover:text-gray-500">
              Log in
            </a>
          {{/if}}
        </div>
      </div>
    </div>
  </nav>

  <div class="container mx-auto">
    {{outlet}}
  </div>
</div>
